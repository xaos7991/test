@model Product

@{ 
    var formHeader = Model == null ? "Добавление продукта" : "Редактирование продукта";
    ViewData["Title"] = formHeader;
}

<form class="form" asp-action="Save" method="post">
    <h3>@formHeader</h3>
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label asp-for="Name">Название</label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Price">Цена</label>
        <input class="form-control" asp-for="Price" />
    </div>

    <input class="btn btn-success" type="submit" value="Сохранить" />

</form>
